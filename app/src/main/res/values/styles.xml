<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="RoundedButton" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:background">@drawable/button_rounded_corners</item>
        <item name="backgroundTint">?colorAccent</item>
        <item name="elevation">4dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="GoogleButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/button_rounded_corners</item>
        <item name="backgroundTint">@color/white</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="BookInfoChip">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:background">@drawable/button_rounded_corners</item>
        <item name="backgroundTint">?colorAccent</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
    </style>
</resources>